{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "APP_HOST",
    "SERVER_PROTOCOL",
    "SERVER_HOST",
    "SERVER_PORT",
    "SSR_ADAPTER"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "test:ci": {
      "dependsOn": [
        "build",
        "typecheck"
      ],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "format": {
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}